<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/live_troll_summoner_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="shhhhhhhhh"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/live_troll_summoner_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/live_troll_summoner_comment_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1분전"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/live_troll_summoner_comment_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/live_comment"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/live_troll_summoner_comment_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="고의 트롤 욕설 정치 ㄹㅇ"/>

</androidx.constraintlayout.widget.ConstraintLayout>